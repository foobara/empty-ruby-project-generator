require_relative "version"

Gem::Specification.new do |spec|
  spec.name = "<%= kebab_case_full_project_name %>"
  spec.version = <%= full_project_name %>::VERSION
  spec.authors = <%= author_names.inspect %>
  spec.email = <%= author_emails.inspect %>

  spec.summary = <%= description.inspect %>
  spec.homepage = <%= homepage_url.inspect %>
  spec.license = <%= (license || "None specified yet").inspect %>
  spec.required_ruby_version = <%= full_project_name %>::MINIMUM_RUBY_VERSION

  spec.metadata["homepage_uri"] = spec.homepage
  spec.metadata["source_code_uri"] = spec.homepage
  spec.metadata["changelog_uri"] = "#{spec.homepage}/blob/main/CHANGELOG.md"

  spec.files = Dir[
    "lib/**/*",
    "src/**/*",
    "LICENSE*.txt",
    "README.md",
    "CHANGELOG.md"
  ]

  spec.add_dependency "foobara", ">= 0.0.136", "< 2.0.0"

  spec.require_paths = ["lib"]
  spec.metadata["rubygems_mfa_required"] = "true"
end
